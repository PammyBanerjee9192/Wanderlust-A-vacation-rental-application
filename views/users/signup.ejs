<% layout('/layouts/boilerplate.ejs') %>
 <div class="row">
            <div class="col-6 offset-3">
                <h1 class="mb-3">SignUp on Wanderlust</h1>
                <form action="/signup" method="POST" class="needs-validation" novalidate>
                    <div class="mb-3">
                        <label for="Username" class="from-label">Username</label><br>
                        <input type="text" placeholder="enter username" name="username" id="Username" class="form-control" required>
                        <div class="invalid-feedback">username shouldn't be empty</div>
                </div>
                <div class="mb-3">
                        <label for="email" class="from-label">Email</label><br>
                        <input type="email" placeholder="enter email" name="email" id="email" class="form-control" required>
                        <div class="invalid-feedback">email shouldn't be empty</div>
                </div>
                <div class="mb-3">
                        <label for="password" class="from-label">Password</label><br>
                        <input type="password" placeholder="enter password" name="password" id="password" class="form-control" required>
                        <div class="invalid-feedback">enter a valid password</div>
                </div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
     </div>